package com.example.demo.service;

import java.util.List;

import org.springframework.security.core.userdetails.UserDetailsService;
import org.springframework.security.core.userdetails.UsernameNotFoundException;

import com.example.demo.model.User1;
import com.example.demo.web.dto.UserRegistrationDto;

public interface UserService extends UserDetailsService {
	User1 save(UserRegistrationDto registrationDto);


	

	User1 getByResetPasswordToken(String token);

	void updatePassword(User1 user1, String newPassword);

	void updateResetPasswordToken(String token, String email) throws UsernameNotFoundException;

	Long getUser1IdByEmail(String email);

	User1 getUser1ById(Long id);
	
	List<User1> getAllUsers();




	User1 getUserById(Long id);




	Long getUserIdByEmail(String email);




	List<User1> getAllUser1s();
}
