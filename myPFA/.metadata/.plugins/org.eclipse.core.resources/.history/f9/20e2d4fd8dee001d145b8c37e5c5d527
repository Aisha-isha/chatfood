<script>
	// Accédez à l'élément d'entrée et au bouton de recherche
var input = document.querySelector('input[type="text"]');
var searchBtn = document.querySelector('button[type="submit"]');

// Ajoutez un gestionnaire d'événements pour le bouton de recherche
searchBtn.addEventListener('click', function() {
  // Obtenez la chaîne de recherche de l'utilisateur
  var searchString = input.value.toLowerCase().trim();

  // Obtenez toutes les divs de produits
  var products = document.querySelectorAll('.product');

  // Parcourez chaque div produit et masquez-la si elle ne correspond pas à la chaîne de recherche
  for (var i = 0; i < products.length; i++) {
    var product = products[i];
    var title = product.querySelector('h2').textContent.toLowerCase();

    if (title.includes(searchString)) {
      product.style.display = 'block';
    } else {
      product.style.display = 'none';
    }
  }
});

	</script>
	
  
