@Controller
public class BookdeleteController {
	@Autowired
	private BookService bookService;
	
	
	
	
	@RequestMapping("/deleteBook/{id}")
	public String deleteBook(@PathVariable("id") long id) {
	    this.bookService.deleteBookById(id);
	    return "redirect:/publishes";
	}


	
}
